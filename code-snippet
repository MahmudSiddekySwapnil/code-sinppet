#this can use for date in text field
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Date Picker Example</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f8f9fa;
        }
        .form-control {
            width: 300px;
            margin: 0 auto;
        }
        .datepicker {
            font-size: 1rem;
        }
        .datepicker-dropdown {
            top: 200px !important; /* adjust this value based on your layout */
        }
        .datepicker table {
            width: 100%;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Date Picker Example</h1>
    <div style="text-align: center;">
        <input type="text" id="trade_license_issue_date" class="form-control">
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $('#trade_license_issue_date').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            todayHighlight: true
        });
    </script>
</body>
</html>

